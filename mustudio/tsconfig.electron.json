{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "electron-dist",
    "rootDir": "electron",
    "lib": ["ES2020"],
    "types": ["node", "electron"]
  },
  "include": ["electron/**/*.cts"]
}
